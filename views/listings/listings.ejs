<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>HavenHopper - All Listings</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
     <link rel="stylesheet" href="/css/home.css">
</head>

<body>
     <section>
          <%- include('../includes/navbar.ejs') %>
     </section>

     <section>
          <h1>All Listings</h1>
          <div class="listing-container">
               <% for (let listings of allListings) { %>
                    <div class="listing-card">
                         <img class="listing-img" src="<%= listings.image.url %>" alt="Listing image">
                         <div class="listing-data">
                              <h5 class="listing-title">
                                   <%= listings.title %>
                              </h5>
                              <p class="">
                                   <%= listings.location %>, <%= listings.country %>
                              </p>
                              <span>
                                   &#8377;<%= listings.price %> / Night
                              </span>
                              <button class="btn btn-primary"><a class="text-white text-decoration-none" href="/listings/<%= listings._id %>">See Details</a></button>
                         </div>
                    </div>
                    <% } %>
          </div>
     </section>

     <section id="footer">
          <%- include('../includes/footer.ejs') %>
     </section>

     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"></script>
</body>

</html>