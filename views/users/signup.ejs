<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HavenHopper - Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <!-- Navbar Section -->
    <section id="navbar">
        <%- include('../includes/navbar.ejs') %>
    </section>

    <!-- Sign Up Section -->
    <section class="d-flex justify-content-center align-items-center vh-100 m-3">
        <div class="signup-container p-4 border rounded-3 shadow-sm w-100" style="max-width: 400px;">
            <h2 class="text-center mb-4">Sign Up</h2>

            <!-- Success Message -->
            <% if (success && success.length>0) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
                <% } %>

                    <!-- Error Message -->
                    <% if (error && error.length>0) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>

                            <!-- Sign Up Form -->
                            <form action="/signup" method="POST">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" id="name" name="name" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" id="email" name="email" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password" name="password" class="form-control" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                            </form>

                            <p class="text-center mt-3">Already have an account? <a href="/signin">Log in here</a></p>
        </div>
    </section>

    <!-- Footer Section -->
    <section id="footer">
        <%- include('../includes/footer.ejs') %>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>